{
  "name": "docs",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run charm-setup && astro dev",
    "start": "npm run charm-setup && astro dev",
    "copy-files": "node ./scripts/copy-support-files.js",
    "build": "npm run charm-setup && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "charm-setup": "npm run build:charm && npm run copy-files",
    "build:charm": "npm run build:charm-modules && npm run build:charm-types",
    "build:charm-modules": "vite build",
    "build:charm-types": "tsup ../core/src/kitchen-sink.ts --out-dir public/charm --dts-resolve --dts-only --format esm --tsconfig tsconfig.tsup.json"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.36.2",
    "@floating-ui/dom": "^1.6.13",
    "astro": "^5.15.3",
    "code-bubble": "^1.3.3",
    "composed-offset-position": "^0.0.6",
    "lit": "^3.2.1",
    "marked": "^15.0.7",
    "sharp": "^0.34.0",
    "wc-dox": "^1.3.5"
  },
  "devDependencies": {
    "@wc-toolkit/wctools": "^0.0.8",
    "custom-elements-manifest": "^2.1.0",
    "tsup": "^8.4.0",
    "vite": "^6.2.5",
    "vite-plugin-dts": "4.5.3"
  }
}
